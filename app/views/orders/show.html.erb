<% content_for(:title_tag) do %>
  Trip Confirmation for <%= @order.trip.experience.title %>
<% end %>

<div class="new_trip">

  <div class="container">
  <h1>Trip Confirmation</h1>
  <h4>Step 3 of 3</h4>

    <div class="row">
      <div style="margin: 50px 0px;">
      <h4>Thanks <%= @order.trip.user.first_name %> for choosing Troveko! We have sent a confirmation to <%= @order.trip.user.email %> with details on your trip, arrival and departure times, and a guide to prepare.</h4>
    </div>
       <h4><ul>
          <li>Status: <%= @order.state %> after host confirmation and arrival at host</li>
          <li>Trip: <%= @order.sku %></li>
          <li>Amount: <%= money_without_cents_and_with_symbol(@order.amount) %></li>
        <ul>
          </h4>
    </div>

    <div class="row" id="confirmation_box">
      <center>
      <h4>Get ready to pack your bags, your adventure to <%= @order.trip.experience.city %> on <%= @order.trip.start_date %> has been sent to host for approval!</h4>
      <br>
    <center><i class="fa fa-thumbs-o-up fa-5x" aria-hidden="true"></i></center>
      <% if @order.trip.contribution %>
      <h4>You commited to contributing Rp. <%= @order.trip.contribution.amount %>, bringing the community <%= contribution_percentage(@order.trip).round(2) %>% closer to <%= @order.trip.experience.fund.title %></h4>
      </center>
      <% else %>
        <h4> We will contact you again following your trip and give you the opportunity to contribute.</h4>
      <% end %>
    </div>

    <div class="row" style="display: flex; justify-content: space-between; padding-bottom: 30px;">
      <h4><%= link_to 'See Upcoming Trips', profile_path(current_user.id) %></h4>
      <h4><%= link_to 'See More Experiences', experiences_path %></h4>
    </div>

</div>
