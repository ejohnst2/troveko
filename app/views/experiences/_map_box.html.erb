<div class="container-fluid">
  <h4><%= experience.title %></h4>
  <p><%= experience.short_description %></p>
    <div class="card_infobox" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path experience.photos[0].path; %>');">
      <div class="card-description">
       <p><%= experience.city %></p>
        <p>Rp. <%= experience.price %> per night</p>
      </div>
      <%= link_to '', experience_path(experience), class: 'card-link' %>
    </div>
    <br>
</div>
