<% @experiences.each do |experience| %>

<div class="col-l-12 col-xs-12 col-sm-12">
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path experience.photos[0].path if experience.photos.any? %>');">

    <div class="card-category">
      <h3><%= experience.city %></h3>
    </div>

    <div class="card-description">
      <h1><%= experience.title %></h1>
      <p style="align;" id="price-card"><%= experience.duration %> days, Rp. <%= experience.price %> per person</p>
    </div>
    <%= link_to '', experience_path(experience), class: 'card-link' %>
  </div>
  <br>
</div>
<%end %>
